extends layouts/main

block content 
    .form-container
        form(action=`/users${routes.changePassword}` method="post")
            input(type="password" name="currentPW" placeholder="Current Password" require=true)
            input(type="password" name="newPW" placeholder="New Password" require=true)
            input(type="password" name="confirmPW" placeholder="Confirm Password" require=true)
            input(type="submit" value="Change Password")